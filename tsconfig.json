{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@data/*": ["data/*"],
      "@utils/*": ["utils/*"],
      "@views/*": ["views/*"],
      "@services/*": ["services/*"],
      "@interfaces/*": ["interfaces/*"],
      "@db/*": ["db/*"],
      "@configs/*": ["configs/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
